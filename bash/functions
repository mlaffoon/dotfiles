function dotfilesupdate {
  local basedir=$(dirname "`readlink ~/.bashrc`")

  (
    cd "$basedir"
    if [ ! -d '.git' ]; then
      (
        git init &&
        git remote add --fetch origin git://github.com/mlaffoon/dotfiles.git &&
        git branch --track master origin/master &&
        git reset
      ) || exit $?
    fi

    if [ `gem list -i git-up` == 'true' ]; then
      git up || exit $?
    else
      (
        git stash &&
        git pull --rebase &&
        git stash pop
      ) || exit $?
    fi

    rake install
  )
}
